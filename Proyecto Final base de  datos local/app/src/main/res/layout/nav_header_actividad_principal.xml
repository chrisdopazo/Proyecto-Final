<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gam App"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/username"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:Chris777"
        android:id="@+id/emailconf"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#fff"
        android:fontFamily="cursive"
        android:typeface="serif"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="1.2"
        android:layout_above="@+id/saldo"
        android:layout_alignStart="@+id/saldo"
        android:layout_marginBottom="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo: 0,00"
        android:id="@+id/saldo"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#fff"
        android:fontFamily="cursive"
        android:typeface="serif"
        android:shadowColor="@color/colorPrimary"
        android:shadowRadius="1.2"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon"
        android:layout_alignStart="@+id/emailconf"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/emailconf"
        android:layout_marginEnd="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/emailconf"
        android:layout_marginTop="36dp" />

</RelativeLayout>