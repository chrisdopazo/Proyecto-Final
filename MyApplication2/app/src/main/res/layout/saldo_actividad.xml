<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.example.fg.myapplication.saldoActividad"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Saldo:"
        android:textSize="50dp"
        android:fontFamily="cursive"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/cantidad"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        android:layout_marginEnd="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cantidad" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="50dp"
        android:background="#FFFFFF"
        android:layout_marginEnd="29dp"
        android:onClick="pagar"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:inputType="number"
        android:id="@+id/cantidad"
        android:layout_width="49dp"
        android:layout_height="0dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toLeftOf="@+id/button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginRight="24dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
    android:id="@+id/boton50"
    android:layout_width="105dp"
    android:layout_height="63dp"
    android:text="50 Dolares"
    android:background="@drawable/plata2"
    android:onClick="pagar50"
    tools:layout_constraintBottom_creator="1"
    android:layout_marginStart="27dp"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="27dp"
    android:fontFamily="cursive"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="95dp" />
    <Button
        android:id="@+id/boton20"
        android:layout_width="105dp"
        android:layout_height="63dp"
        android:text="20 Dolares"
        android:background="@drawable/plata2"
        android:onClick="pagar20"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="27dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="172dp" />
    <Button
        android:id="@+id/boton5"
        android:layout_width="105dp"
        android:layout_height="63dp"
        android:text="5 Dolares"
        android:background="@drawable/plata2"
        android:onClick="pagar5"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="27dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="324dp" />
    <Button
        android:id="@+id/boton100"
        android:layout_width="105dp"
        android:layout_height="63dp"
        android:text="100 Dolares"
        android:background="@drawable/plata2"
        android:onClick="pagar100"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="27dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
    <Button
        android:id="@+id/boton10"
        android:layout_width="105dp"
        android:layout_height="63dp"
        android:text="10 Dolares"
        android:background="@drawable/plata2"
        android:onClick="pagar10"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="27dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="247dp" />

    <Button
        android:id="@+id/botonb"
        android:layout_width="112dp"
        android:layout_height="61dp"
        android:text="Borrar"
        android:onClick="borrar"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="29dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="158dp"
        android:layout_marginRight="29dp" />


</android.support.constraint.ConstraintLayout>
